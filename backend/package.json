{
  "name": "vaste-unified",
  "version": "1.0.0",
  "description": "Vaste - Unified backend and frontend with game server",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"vite\"",
    "dev:server": "nodemon server.js",
    "dev:client": "vite",
    "build": "vite build",
    "build:start": "npm run build && npm start",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "vaste",
    "backend",
    "frontend",
    "authentication",
    "mysql",
    "express",
    "jwt",
    "react",
    "typescript",
    "threejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@react-three/drei": "^9.88.13",
    "@react-three/fiber": "^8.15.8",
    "@types/react-router-dom": "^5.3.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.1",
    "three": "^0.157.0",
    "uuid": "^9.0.1"
